---
import { Facebook, Instagram, Linkedin, Menu } from "react-feather";
import { URL_LOGO, LINK_PAGE, SOCIAL_MEDIA } from "../services/constantes";
import Image from "astro/components/Image.astro";
interface Props {
  socialMedia?: Element[];
  urls?: string[];
  logoUrl?: string;
}
const {
  socialMedia = [Facebook, Instagram, Linkedin],
  urls = LINK_PAGE,
  logoUrl = URL_LOGO,
} = Astro.props;
---

<header class="sticky top-0 z-50 bg-white shadow">
  <div class="flex justify-between md:justify-evenly p-4">
    <!-- logo -->
    <a
      href="/"
      title="Centro Comercial Rosedal"
      aria-label="logo principal de el sitio web del centro comercial rosedal"
    >
      <Image
        loading="lazy"
        height={20}
        width={70}
        class="w-28 lg:w-62 h-12"
        src={logoUrl}
        alt="logo de la pagina web provisional"
      />
    </a>
    <!-- menu para mobiles -->
    <nav class="lg:hidden flex items-center">
      <button class="rounded bg-slate-400/20 p-1.5 cursor-pointer">
        <Menu className="text-primary size-6" />
      </button>
    </nav>
    <!-- menu inicial -->
    <ul
      class="hidden lg:flex items-center justify-center gap-8 list-none text-lg font-semibold"
    >
      {
        urls &&
          urls.map((enlace) => (
            <li>
              <a
                class="capitalize hover:text-primary transition duration-300"
                href={enlace.toLowerCase()}
                title={enlace.toUpperCase()[0] + enlace.slice(1)}
              >
                {enlace}
              </a>
            </li>
          ))
      }
    </ul>
    <!-- botones de redes -->
    <div
      class="flex items-center justify-center gap-4 lg:gap-8 list-none *:border *:md:border-2 *:border-primary *:p-0.5 *:md:p-1 *:rounded-full"
    >
      {
        socialMedia &&
          socialMedia.map((MyIcon: any, i: number) => (
            <a
              title={SOCIAL_MEDIA[i]}
              name={SOCIAL_MEDIA[i]}
              aria-label={`Enlace a ${SOCIAL_MEDIA[i]}`}
              aria-labelledby="Enlace para las redes sociales"
              class="group hover:scale-110 hover:bg-transparent transition duration-300 bg-green-500"
              href={SOCIAL_MEDIA[i].toLowerCase()}
            >
              {
                <MyIcon
                  className="text-white fill-green-500 group-hover:text-green-500 group-hover:fill-white p-0.5 size-4 md:size-5 lg:size-6 transition duration-300"
                  strokeWidth={2}
                />
              }
            </a>
          ))
      }
    </div>
  </div>
</header>
