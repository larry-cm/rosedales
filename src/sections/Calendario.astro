---
import { getMonths } from "@services/data";

const meses = getMonths();
---

<!-- locales principales -->
<section class="mt-12 sm:mt-24 max-w-7xl mx-auto">
    <article class="p-4 text-center">
        <h2 class="text-5xl mb-4 font-semibold tracking-wider">
            Calendario Comercial 2025-2026
        </h2>
    </article>
    <section
        class="sm:p-8 sm:m-8 px-8 py-4 mx-8 grid grid-cols-[repeat(auto-fill,minmax(180px,1fr))] sm:grid-cols-[repeat(auto-fill,minmax(280px,1fr))] gap-6"
    >
        <!-- cards de locales principales -->
        {
            meses?.map(({ month, url }, index) => (
                <article class="group/link aspect-square flex flex-col border border-zinc-300 shadow rounded-2xl w-full h-full px-8 py-4 ">
                    <a
                        href={url ?? "#"}
                        class="scale-95 group-hover/link:scale-100 flex-1 transition duration-200 overflow-hidden flex rounded-2xl select-none w-full"
                    />
                    <div class="mt-4 aspect-video min-h-1/4 flex flex-col justify-end gap-2 text-center drop-shadow-xl drop-shadow-zinc-900/30">
                        <h3 class="text-2xl font-semibold tracking-wide capitalize">
                            {month}
                            {month !== "Noviembre" && month !== "Diciembre"
                                ? "2026"
                                : "2025"}
                        </h3>
                        <a
                            href={``}
                            class="underline text-lg text-zinc-700 hover:text-green-500 group-hover/link:text-green-500 transition duration-200"
                        >
                            Ir a conocer mas.
                        </a>
                    </div>
                </article>
            ))
        }
    </section>
</section>
<span id="locales-comerciales" class="sr-only"></span>
