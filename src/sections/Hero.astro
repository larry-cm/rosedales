---
// import type { objetosSlides } from "@type/global";
import Carousel from "../components/Carousel";
import Separator from "@components/Separator";
import { getImages } from "@services/data";
const images = await getImages();
---

<!-- primer carousel -->
<section class="relative">
    <div class="bg-green-500">
        <div class="bg-white md:h-[90vh]">
            <Carousel
                type="img"
                slides={images}
                visibleSlides={1}
                classImg="size-full"
                autoSlide={false}
                visiblePoints
                client:visible
            />
        </div>

        <Separator />
        <div class="sr-only" id="eventos"></div>
    </div>
</section>

